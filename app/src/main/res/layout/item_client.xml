<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_nom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Amine fattas"
                style="@style/label"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"/>

            <TextView
                android:id="@+id/item_typeCompte"
                android:layout_toRightOf="@id/item_nom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="20 000"
                style="@style/label"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_numTel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="06fffffff"
                style="@style/field_text"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"/>

            <TextView
                android:id="@+id/item_email"
                android:layout_toRightOf="@id/item_nom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:layout_height="wrap_content"
                android:text="a@gmail.com"
                style="@style/field_text"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
